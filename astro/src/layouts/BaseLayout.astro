---
const { title = 'Astro beta blog' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      :root {
        color-scheme: dark;
        --bg: #050505;
        --panel: #111111;
        --panel-alt: #1b1b1b;
        --border: #2a2a2a;
        --text: #f5f5f5;
        --muted: #b3b3b3;
        --accent: #f0f0f0;
        --console-font: "Courier New", Courier, monospace;
        --content-font: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans",
          sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: var(--console-font);
        background: var(--bg);
        color: var(--text);
        line-height: 1.6;
        letter-spacing: 0.03em;
      }

      body * {
        font-family: inherit;
      }

      a {
        color: var(--accent);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      header {
        background: linear-gradient(135deg, #0a0a0a, #151515);
        color: var(--text);
        padding: 1rem 1.5rem;
        position: sticky;
        top: 0;
        z-index: 10;
        border-bottom: 1px solid var(--border);
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.5);
      }

      .banner {
        display: flex;
        align-items: center;
        gap: 1rem;
        max-width: 960px;
        margin: 0 auto;
      }

      .badge {
        background: rgba(255, 255, 255, 0.08);
        color: var(--text);
        padding: 0.3rem 0.75rem;
        border-radius: 999px;
        font-size: 0.85rem;
        letter-spacing: 0.02em;
        border: 1px solid var(--border);
      }

      .container {
        max-width: 960px;
        margin: 1.5rem auto 4rem;
        padding: 0 1.25rem;
      }

      footer {
        max-width: 960px;
        margin: 0 auto 2rem;
        padding: 0 1.25rem;
        color: var(--muted);
      }

      code {
        font-family: "SFMono-Regular", Consolas, "Liberation Mono", Menlo, monospace;
        background: var(--panel);
        border: 1px solid var(--border);
        border-radius: 4px;
        padding: 0.1rem 0.35rem;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="banner">
        <div>
          <div style="font-weight: 700; font-size: 1.1rem">Danny's Blog</div>
        </div>
        <div style="margin-left: auto; font-size: 0.95rem;">
          <a href="/">Return to main site</a>
        </div>
      </div>
    </header>
    <main class="container">
      <slot />
    </main>
    <footer>
    </footer>
  </body>
</html>
